			                   android:layout_weight="0.89" />

			               <Button
			                   android:id="@+id/addDependencyButton"
			                   android:layout_width="68dp"
			                   android:layout_height="wrap_content"
			                   android:text="Add" />
			           </LinearLayout>

       	             	<ListView
						            android:id="@+id/dependenciesList"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content" >
						        </ListView>
    					
	           
          	</LinearLayout>
            
            <LinearLayout
